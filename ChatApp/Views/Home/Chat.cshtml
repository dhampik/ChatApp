@model IEnumerable<ChatApp.Models.Message>

@{
    ViewBag.Title = "Chat";
}
<div id="discussion" class="row chat-messages">
    @foreach (var item in Model)
    {
        <div class="col-sm-2 col-md-2 text-right"><strong>
            @Html.DisplayFor(modelItem => item.Author)
        </strong></div>
        <div class="col-sm-10 col-md-10">
            @Html.DisplayFor(modelItem => item.MessageText)
        </div>
    }
</div>
<div class="row">
    <div class="col-sm-2 col-md-2 text-right">
        <input type="hidden" id="displayName" />
        <strong id="displayNameText"></strong>
    </div>
    <div class="col-sm-8 col-md-8">
        <textarea id="message" class="form-control" rows="3"></textarea>
    </div>
    <div class="col-sm-2 col-md-2">
        <input type="button" id="sendMessage" class="btn btn-primary btn-block" value="Send" />
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Scripts/chat.js"></script>
}